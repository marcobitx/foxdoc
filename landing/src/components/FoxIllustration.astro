---
// landing/src/components/FoxIllustration.astro
// Abstract geometric fox SVG with amber gradient and glow animation
// Used on auth showcase panel
// Related: AuthShowcase.astro, auth.astro
---

<div class="fox-illustration">
  <svg
    width="160"
    height="144"
    viewBox="0 0 160 144"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
    aria-hidden="true"
    role="img"
  >
    <defs>
      <linearGradient id="foxGradient" x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="0%" stop-color="#f59e0b" />
        <stop offset="100%" stop-color="#ea580c" />
      </linearGradient>
      <filter id="foxGlowFilter" x="-50%" y="-50%" width="200%" height="200%">
        <feGaussianBlur stdDeviation="3" result="blur" />
        <feMerge>
          <feMergeNode in="blur" />
          <feMergeNode in="SourceGraphic" />
        </feMerge>
      </filter>
    </defs>

    <g filter="url(#foxGlowFilter)" class="fox-glow">
      <!-- Left ear -->
      <polygon
        points="30,60 50,8 65,52"
        stroke="url(#foxGradient)"
        stroke-width="2.5"
        fill="none"
        stroke-linejoin="round"
      />
      <!-- Right ear -->
      <polygon
        points="95,52 110,8 130,60"
        stroke="url(#foxGradient)"
        stroke-width="2.5"
        fill="none"
        stroke-linejoin="round"
      />

      <!-- Head outline -->
      <path
        d="M30,60 Q30,100 80,130 Q130,100 130,60"
        stroke="url(#foxGradient)"
        stroke-width="2.5"
        fill="none"
        stroke-linecap="round"
      />

      <!-- Left eye -->
      <circle cx="58" cy="78" r="7" stroke="#f59e0b" stroke-width="2" fill="none" />
      <circle cx="58" cy="78" r="2.5" fill="#f59e0b" />

      <!-- Right eye -->
      <circle cx="102" cy="78" r="7" stroke="#f59e0b" stroke-width="2" fill="none" />
      <circle cx="102" cy="78" r="2.5" fill="#f59e0b" />

      <!-- Nose -->
      <polygon
        points="75,102 85,102 80,108"
        stroke="#ea580c"
        stroke-width="2"
        fill="#ea580c"
        stroke-linejoin="round"
      />

      <!-- Left whiskers -->
      <line x1="68" y1="100" x2="28" y2="92" stroke="url(#foxGradient)" stroke-width="1.5" stroke-linecap="round" />
      <line x1="68" y1="104" x2="30" y2="104" stroke="url(#foxGradient)" stroke-width="1.5" stroke-linecap="round" />
      <line x1="68" y1="108" x2="32" y2="116" stroke="url(#foxGradient)" stroke-width="1.5" stroke-linecap="round" />

      <!-- Right whiskers -->
      <line x1="92" y1="100" x2="132" y2="92" stroke="url(#foxGradient)" stroke-width="1.5" stroke-linecap="round" />
      <line x1="92" y1="104" x2="130" y2="104" stroke="url(#foxGradient)" stroke-width="1.5" stroke-linecap="round" />
      <line x1="92" y1="108" x2="128" y2="116" stroke="url(#foxGradient)" stroke-width="1.5" stroke-linecap="round" />

      <!-- Left cheek marking -->
      <path
        d="M40,75 Q45,90 55,95"
        stroke="url(#foxGradient)"
        stroke-width="1.5"
        fill="none"
        stroke-linecap="round"
        opacity="0.5"
      />

      <!-- Right cheek marking -->
      <path
        d="M120,75 Q115,90 105,95"
        stroke="url(#foxGradient)"
        stroke-width="1.5"
        fill="none"
        stroke-linecap="round"
        opacity="0.5"
      />
    </g>
  </svg>
</div>

<style>
  .fox-illustration {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .fox-glow {
    animation: foxGlow 3s ease-in-out infinite;
  }

  @keyframes foxGlow {
    0%,
    100% {
      filter: drop-shadow(0 0 6px rgba(245, 158, 11, 0.4));
    }
    50% {
      filter: drop-shadow(0 0 14px rgba(245, 158, 11, 0.8));
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .fox-glow {
      animation: none;
    }
  }
</style>
