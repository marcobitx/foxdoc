---
// landing/src/components/AuthShowcase.astro
// Left panel of split-screen auth layout — product showcase with visuals
// Displays branding, fox illustration, product mockup, and trust badges
// Related: auth.astro, FoxIllustration.astro, ProductMockup.astro

import FoxIllustration from './FoxIllustration.astro';
---

<div class="showcase-panel">
  <div class="dot-grid"></div>
  <div class="amber-glow"></div>

  <div class="showcase-content">
    <!-- Logo -->
    <a href="/" class="logo-link">
      <img src="/favicon.svg" alt="foxDoc logo" width="28" height="28" />
      <span class="logo-text">fox<span class="logo-accent">Doc</span></span>
    </a>

    <!-- Hero heading -->
    <h1 class="hero-heading">
      Analizuokite viešųjų pirkimų dokumentus per kelias minutes
    </h1>

    <!-- Sub-text -->
    <p class="hero-subtext">
      AI dokumentų analizė, kuri taupo laiką ir pinigus
    </p>

    <!-- Fox Illustration -->
    <FoxIllustration />

    <!-- Trust badges -->
    <div class="trust-badges">
      <div class="trust-badge">
        <svg width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
          <circle cx="7" cy="7" r="6.5" stroke="#f59e0b" stroke-width="1"/>
          <path d="M4.5 7L6.25 8.75L9.5 5.25" stroke="#f59e0b" stroke-width="1.2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        <span>500+ organizacijų</span>
      </div>
      <div class="trust-badge">
        <svg width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
          <rect x="2.5" y="1.5" width="9" height="11" rx="1" stroke="#f59e0b" stroke-width="1"/>
          <line x1="5" y1="5" x2="9" y2="5" stroke="#f59e0b" stroke-width="0.8" stroke-linecap="round"/>
          <line x1="5" y1="7.5" x2="9" y2="7.5" stroke="#f59e0b" stroke-width="0.8" stroke-linecap="round"/>
          <line x1="5" y1="10" x2="7.5" y2="10" stroke="#f59e0b" stroke-width="0.8" stroke-linecap="round"/>
        </svg>
        <span>10,000+ dokumentų</span>
      </div>
      <div class="trust-badge">
        <svg width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
          <circle cx="7" cy="7" r="6" stroke="#f59e0b" stroke-width="1"/>
          <line x1="7" y1="4" x2="7" y2="7.5" stroke="#f59e0b" stroke-width="1.2" stroke-linecap="round"/>
          <line x1="7" y1="7.5" x2="9.5" y2="9" stroke="#f59e0b" stroke-width="1.2" stroke-linecap="round"/>
        </svg>
        <span>99.9% uptime</span>
      </div>
    </div>
  </div>
</div>

<style>
  .showcase-panel {
    position: relative;
    min-height: 100vh;
    background: #0d0a08;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .dot-grid {
    position: absolute;
    inset: 0;
    background-image: radial-gradient(rgba(255, 255, 255, 0.03) 1px, transparent 1px);
    background-size: 32px 32px;
    pointer-events: none;
  }

  .amber-glow {
    position: absolute;
    inset: 0;
    background: radial-gradient(ellipse at 30% 40%, rgba(245, 158, 11, 0.10), transparent 60%);
    pointer-events: none;
  }

  .showcase-content {
    position: relative;
    z-index: 1;
    padding: 3rem 2.5rem;
    max-width: 520px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
  }

  .logo-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    margin-bottom: 2rem;
  }

  .logo-text {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 1.125rem;
    font-weight: 700;
    color: #ffffff;
  }

  .logo-accent {
    color: #f59e0b;
  }

  .hero-heading {
    font-family: 'Space Grotesk', sans-serif;
    font-size: clamp(1.5rem, 2.5vw, 2rem);
    font-weight: 700;
    color: #ffffff;
    line-height: 1.2;
    margin: 0 0 1rem 0;
  }

  .hero-subtext {
    font-family: 'Plus Jakarta Sans', sans-serif;
    font-size: 0.875rem;
    color: #b5a99f;
    line-height: 1.5;
    margin: 0 0 2rem 0;
  }

  .trust-badges {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-top: 2rem;
  }

  .trust-badge {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-family: 'Plus Jakarta Sans', sans-serif;
    font-size: 0.6875rem;
    color: #6d5f55;
  }

  .trust-badge svg {
    flex-shrink: 0;
  }
</style>
