---
// src/components/Nav.astro
// Sticky glassmorphism top navigation bar
// Mobile: shows logo + hamburger only. Desktop: full nav links + CTA
import MobileNav from './MobileNav.astro';
---
<header class="fixed top-0 left-0 right-0 z-50"
        style="backdrop-filter: blur(20px); -webkit-backdrop-filter: blur(20px); background: rgba(13,15,20,0.85); border-bottom: 1px solid rgba(255,255,255,0.06);">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 h-16 flex items-center justify-between">

    <!-- Logo -->
    <a href="/" class="flex items-center gap-2 shrink-0">
      <img src="/favicon.svg" alt="foxDoc logo" width="28" height="28" />
      <span class="font-heading text-lg font-bold text-white">fox<span style="color: #00ca88;">Doc</span></span>
    </a>

    <!-- Desktop nav links -->
    <nav class="hidden md:flex items-center gap-6 lg:gap-8">
      <a href="/features" class="text-sm font-medium transition-colors duration-200" style="color: #a0aec0;" onmouseover="this.style.color='#ffffff'" onmouseout="this.style.color='#a0aec0'">Funkcijos</a>
      <a href="/pricing" class="text-sm font-medium transition-colors duration-200" style="color: #a0aec0;" onmouseover="this.style.color='#ffffff'" onmouseout="this.style.color='#a0aec0'">Kainodara</a>
      <a href="/use-cases" class="text-sm font-medium transition-colors duration-200" style="color: #a0aec0;" onmouseover="this.style.color='#ffffff'" onmouseout="this.style.color='#a0aec0'">Naudojimo atvejai</a>
      <a href="/docs" class="text-sm font-medium transition-colors duration-200" style="color: #a0aec0;" onmouseover="this.style.color='#ffffff'" onmouseout="this.style.color='#a0aec0'">Dokumentacija</a>
      <a href="/forum" class="text-sm font-medium transition-colors duration-200" style="color: #a0aec0;" onmouseover="this.style.color='#ffffff'" onmouseout="this.style.color='#a0aec0'">Forumas</a>
    </nav>

    <!-- Desktop CTA + Mobile hamburger -->
    <div class="flex items-center gap-3">
      <a href="https://app.foxdoc.io/login"
         class="hidden md:block text-sm font-medium transition-colors duration-200"
         style="color: #a0aec0;" onmouseover="this.style.color='#ffffff'" onmouseout="this.style.color='#a0aec0'">
        Prisijungti
      </a>
      <a href="https://app.foxdoc.io"
         class="hidden md:inline-flex btn-primary text-sm px-4 py-2">
        Išbandyti nemokamai
      </a>
      <MobileNav />
    </div>
  </div>
</header>

<!-- Sticky mobile CTA bar at bottom -->
<div class="fixed bottom-0 left-0 right-0 z-40 md:hidden px-4 pb-4 pt-2"
     style="background: rgba(13,15,20,0.97); backdrop-filter: blur(16px); -webkit-backdrop-filter: blur(16px); border-top: 1px solid rgba(255,255,255,0.06);">
  <a href="https://app.foxdoc.io" class="btn-primary w-full text-sm">
    Išbandyti nemokamai — nemokamai
  </a>
</div>
