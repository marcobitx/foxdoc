---
// src/components/sections/Hero.astro
// Main hero — headline, two CTAs, animated product report mockup
---
<section class="relative min-h-screen flex items-center px-4 sm:px-6 overflow-hidden pt-16">
  <!-- Background: radial gradient + dot grid -->
  <div class="absolute inset-0 pointer-events-none" style="background: radial-gradient(ellipse 80% 50% at 50% -10%, rgba(234, 88, 12,0.18) 0%, transparent 60%);"></div>
  <div class="absolute inset-0 pointer-events-none" style="background-image: radial-gradient(rgba(255,255,255,0.04) 1px, transparent 1px); background-size: 32px 32px;"></div>

  <div class="relative w-full max-w-6xl mx-auto py-16 lg:py-24">
    <div class="flex flex-col lg:grid lg:grid-cols-2 gap-10 lg:gap-16 items-center">

      <!-- Left: copy -->
      <div class="flex flex-col gap-6 text-center lg:text-left">
        <!-- Badge -->
        <div class="inline-flex items-center gap-2 self-center lg:self-start px-3 py-1.5 rounded-full text-xs font-mono border"
             style="color: #f59e0b; border-color: rgba(245, 158, 11,0.25); background: rgba(245, 158, 11,0.07);">
          <span class="w-1.5 h-1.5 rounded-full animate-pulse" style="background: #f59e0b;"></span>
          Powered by Claude Sonnet 4
        </div>

        <!-- Headline -->
        <h1 class="font-heading font-bold text-white">
          Viešųjų pirkimų<br />
          <span style="color: #f59e0b;">dokumentai</span> —<br />
          analizuojami per<br />
          <span style="color: #f59e0b;">3 minutes</span>
        </h1>

        <!-- Subheadline -->
        <p class="text-base sm:text-lg leading-relaxed max-w-lg mx-auto lg:mx-0" style="color: #b5a99f;">
          AI automatiškai ištraukia esminius duomenis iš bet kokio pirkimo dokumentų paketo.
          Sutaupykite <strong class="text-white font-semibold">4–6 valandas</strong> per analizę.
        </p>

        <!-- CTAs -->
        <div class="flex flex-col sm:flex-row gap-3 justify-center lg:justify-start">
          <a href="https://app.foxdoc.io" class="btn-primary text-sm sm:text-base">
            Išbandyti nemokamai
          </a>
          <a href="#how-it-works" class="btn-secondary text-sm sm:text-base">
            Kaip veikia →
          </a>
        </div>

        <p class="text-xs sm:text-sm" style="color: #6d5f55;">3 kreditai nemokamai · Nereikia kredito kortelės</p>
      </div>

      <!-- Right: product mockup -->
      <div class="relative w-full max-w-sm mx-auto lg:max-w-none">
        <div class="rounded-2xl p-5 sm:p-6 border"
             style="background: rgba(255,255,255,0.04); backdrop-filter: blur(12px); border-color: rgba(255,255,255,0.1); box-shadow: 0 8px 32px rgba(0,0,0,0.4);">
          <!-- Window chrome -->
          <div class="flex items-center gap-2 mb-5">
            <div class="w-3 h-3 rounded-full" style="background: rgba(239,68,68,0.6);"></div>
            <div class="w-3 h-3 rounded-full" style="background: rgba(245,158,11,0.6);"></div>
            <div class="w-3 h-3 rounded-full" style="background: rgba(34,197,94,0.6);"></div>
            <span class="ml-2 text-xs font-mono" style="color: #b5a99f;">ataskaita.pdf — foxDoc</span>
          </div>
          <!-- Mock content -->
          <div class="flex flex-col gap-3">
            <div class="h-3 rounded" style="background: #2e2520; width: 72%;"></div>
            <div class="h-3 rounded" style="background: #2e2520; width: 100%;"></div>
            <div class="h-3 rounded" style="background: #2e2520; width: 85%;"></div>
            <!-- QA score badge -->
            <div class="mt-2 p-3 rounded-lg" style="background: rgba(245, 158, 11,0.08); border: 1px solid rgba(245, 158, 11,0.2);">
              <p class="text-xs font-mono" style="color: #f59e0b;">✓ QA balas: 94 / 100</p>
            </div>
            <!-- Data fields -->
            <div class="grid grid-cols-2 gap-2 mt-1">
              <div class="p-2.5 rounded-lg" style="background: #2e2520;">
                <p class="text-xs mb-1" style="color: #6d5f55;">CPV kodas</p>
                <p class="text-sm font-mono font-medium text-white">72200000-7</p>
              </div>
              <div class="p-2.5 rounded-lg" style="background: #2e2520;">
                <p class="text-xs mb-1" style="color: #6d5f55;">Sutarties vertė</p>
                <p class="text-sm font-mono font-medium text-white">€124 500</p>
              </div>
              <div class="p-2.5 rounded-lg" style="background: #2e2520;">
                <p class="text-xs mb-1" style="color: #6d5f55;">Pasiūlymų terminas</p>
                <p class="text-sm font-mono font-medium text-white">2026-03-15</p>
              </div>
              <div class="p-2.5 rounded-lg" style="background: #2e2520;">
                <p class="text-xs mb-1" style="color: #6d5f55;">Dokumentai</p>
                <p class="text-sm font-mono font-medium text-white">12 failų</p>
              </div>
            </div>
          </div>
        </div>
        <!-- Glow behind mockup -->
        <div class="absolute -inset-6 rounded-3xl -z-10 blur-3xl" style="background: rgba(234, 88, 12,0.08);"></div>
      </div>

    </div>
  </div>
</section>
