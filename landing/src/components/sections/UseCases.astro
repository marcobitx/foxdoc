---
// landing/src/components/sections/UseCases.astro
// Audience segments — asymmetric bento: 1 large card left + 2 smaller stacked right
// Related: index.astro, pages/use-cases.astro
const cases = [
  {
    tag: 'Perkančios organizacijos',
    title: 'Greitai įvertinkite gautus pasiūlymus',
    desc: 'Automatiškai palyginkite tiekėjų pasiūlymus pagal techninius reikalavimus, kainas ir terminus. Sumažinkite peržiūros laiką nuo dienų iki valandų.',
    chips: ['Pasiūlymų vertinimas', 'Atitikties tikrinimas', 'Ataskaitos'],
    href: '/use-cases#perkanciosios',
    large: true,
  },
  {
    tag: 'Tiekėjai ir rangovai',
    title: 'Supraskite pirkimo sąlygas akimirksniu',
    desc: 'Prieš teikdami pasiūlymą, per 3 minutes sužinokite visus techninius reikalavimus, terminus ir rizikos faktorius.',
    chips: ['Pirkimo analizė', 'CPV kodai', 'Rizika'],
    href: '/use-cases#tiekejai',
    large: false,
  },
  {
    tag: 'Auditoriai ir konsultantai',
    title: 'Tikrinkite pirkimų atitiktį reikalavimams',
    desc: 'Sistemingai analizuokite pirkimų dokumentų paketus dėl procedūrinių klaidų ir neatitikčių.',
    chips: ['Auditas', 'Atitiktis', 'Dokumentai'],
    href: '/use-cases#auditoriai',
    large: false,
  },
];
---
<section class="py-16 sm:py-24 px-4 sm:px-6" style="background: #0d0a08;">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-12 sm:mb-16">
      <p class="text-xs sm:text-sm font-mono mb-3" style="color: #f59e0b;">// naudojimo atvejai</p>
      <h2 class="font-heading font-bold" style="color: #fdf9f7;">Kas naudoja foxDoc?</h2>
    </div>

    <div class="flex flex-col md:grid gap-4" style="grid-template-columns: 1fr 0.75fr;">

      <!-- Large card -->
      <a href="/use-cases#perkanciosios"
         class="uc-card scroll-reveal flex flex-col p-7 rounded-2xl border"
         style="border-color: rgba(168,162,158,0.12); background: #1a1512; text-decoration: none; min-height: 300px;">
        <!-- Building SVG icon -->
        <div class="mb-5 w-10 h-10 flex items-center justify-center rounded-lg" style="background: rgba(245,158,11,0.08);">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#f59e0b" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M3 21h18M5 21V7l7-4 7 4v14M9 21v-6h6v6"/>
          </svg>
        </div>
        <p class="text-xs font-mono mb-2" style="color: #f59e0b;">{cases[0].tag}</p>
        <h3 class="font-heading font-semibold mb-4 flex-1" style="font-size: 1.25rem; color: #fdf9f7; line-height: 1.35;">{cases[0].title}</h3>
        <p class="text-sm leading-relaxed mb-5" style="color: #b5a99f;">{cases[0].desc}</p>
        <div class="flex flex-wrap gap-2">
          {cases[0].chips.map(c => (
            <span class="px-2 py-1 text-xs rounded" style="background: rgba(168,162,158,0.07); color: #b5a99f; border: 1px solid rgba(168,162,158,0.12);">{c}</span>
          ))}
        </div>
        <p class="uc-arrow mt-5 text-sm font-medium" style="color: #f59e0b; opacity: 0; transition: opacity 0.2s;">Sužinoti daugiau →</p>
      </a>

      <!-- Right column: two smaller cards -->
      <div class="flex flex-col gap-4">

        <a href="/use-cases#tiekejai"
           class="uc-card scroll-reveal flex flex-col p-5 rounded-2xl border flex-1"
           style="border-color: rgba(168,162,158,0.12); background: #1a1512; text-decoration: none; transition-delay: 80ms;">
          <!-- Box SVG icon -->
          <div class="mb-4 w-9 h-9 flex items-center justify-center rounded-lg" style="background: rgba(245,158,11,0.08);">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#f59e0b" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/>
              <polyline points="3.27 6.96 12 12.01 20.73 6.96"/><line x1="12" y1="22.08" x2="12" y2="12"/>
            </svg>
          </div>
          <p class="text-xs font-mono mb-1" style="color: #f59e0b;">{cases[1].tag}</p>
          <h3 class="font-heading font-semibold mb-2" style="font-size: 1rem; color: #fdf9f7; line-height: 1.35;">{cases[1].title}</h3>
          <p class="text-sm leading-relaxed flex-1" style="color: #b5a99f; font-size: 0.8125rem;">{cases[1].desc}</p>
          <p class="uc-arrow mt-3 text-xs font-medium" style="color: #f59e0b; opacity: 0; transition: opacity 0.2s;">Sužinoti daugiau →</p>
        </a>

        <a href="/use-cases#auditoriai"
           class="uc-card scroll-reveal flex flex-col p-5 rounded-2xl border flex-1"
           style="border-color: rgba(168,162,158,0.12); background: #1a1512; text-decoration: none; transition-delay: 160ms;">
          <!-- Search SVG icon -->
          <div class="mb-4 w-9 h-9 flex items-center justify-center rounded-lg" style="background: rgba(245,158,11,0.08);">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#f59e0b" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="11" cy="11" r="8"/><line x1="21" y1="21" x2="16.65" y2="16.65"/>
            </svg>
          </div>
          <p class="text-xs font-mono mb-1" style="color: #f59e0b;">{cases[2].tag}</p>
          <h3 class="font-heading font-semibold mb-2" style="font-size: 1rem; color: #fdf9f7; line-height: 1.35;">{cases[2].title}</h3>
          <p class="text-sm leading-relaxed flex-1" style="color: #b5a99f; font-size: 0.8125rem;">{cases[2].desc}</p>
          <p class="uc-arrow mt-3 text-xs font-medium" style="color: #f59e0b; opacity: 0; transition: opacity 0.2s;">Sužinoti daugiau →</p>
        </a>

      </div>
    </div>
  </div>
</section>

<style>
  .uc-card:hover { border-color: rgba(245,158,11,0.2) !important; }
  .uc-card:hover .uc-arrow { opacity: 1 !important; }
</style>

<script>
  const observer = new IntersectionObserver(
    (entries) => entries.forEach(e => { if (e.isIntersecting) e.target.classList.add('visible'); }),
    { threshold: 0.1, rootMargin: '0px 0px -40px 0px' }
  );
  document.querySelectorAll('.scroll-reveal').forEach(el => observer.observe(el));
</script>
