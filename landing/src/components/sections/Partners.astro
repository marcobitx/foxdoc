---
// src/components/sections/Partners.astro
// Infinite auto-scrolling partners/clients logo strip
const partners = [
  { name: 'Vilniaus m. savivaldybė', abbr: 'VS' },
  { name: 'Viešųjų pirkimų tarnyba', abbr: 'VT' },
  { name: 'Centrinė perkančioji org.', abbr: 'CP' },
  { name: 'UAB Baltic Procurement', abbr: 'BP' },
  { name: 'Audit & Legal Group', abbr: 'AL' },
  { name: 'Kauno miesto savivaldybė', abbr: 'KS' },
];
---
<section class="py-12 sm:py-16 px-4" style="border-top: 1px solid rgba(255,255,255,0.06); border-bottom: 1px solid rgba(255,255,255,0.06);">
  <p class="text-center text-xs sm:text-sm mb-8 font-medium tracking-wide uppercase" style="color: #4a5568;">
    Pasitiki viešųjų pirkimų specialistai visoje Lietuvoje
  </p>
  <div class="relative overflow-hidden">
    <!-- Fade edges -->
    <div class="absolute left-0 top-0 bottom-0 w-16 z-10 pointer-events-none" style="background: linear-gradient(to right, #0d0f14, transparent);"></div>
    <div class="absolute right-0 top-0 bottom-0 w-16 z-10 pointer-events-none" style="background: linear-gradient(to left, #0d0f14, transparent);"></div>
    <!-- Marquee track -->
    <div class="marquee-track flex gap-12 sm:gap-16 whitespace-nowrap">
      {[...partners, ...partners, ...partners].map(p => (
        <div class="inline-flex items-center gap-3 shrink-0" style="opacity: 0.45;" onmouseover="this.style.opacity='1'" onmouseout="this.style.opacity='0.45'">
          <div class="w-9 h-9 rounded-lg flex items-center justify-center text-xs font-mono font-bold shrink-0"
               style="background: #1a1f2e; color: #00ca88; border: 1px solid rgba(255,255,255,0.06);">
            {p.abbr}
          </div>
          <span class="text-sm font-medium" style="color: #a0aec0;">{p.name}</span>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .marquee-track {
    animation: marquee-scroll 35s linear infinite;
  }
  .marquee-track:hover {
    animation-play-state: paused;
  }
  @keyframes marquee-scroll {
    from { transform: translateX(0); }
    to { transform: translateX(-33.333%); }
  }
</style>
