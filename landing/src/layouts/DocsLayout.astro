---
// landing/src/layouts/DocsLayout.astro
// Docs layout — sticky sidebar navigation + main content area
// Related: Layout.astro, docs pages
import Layout from './Layout.astro';

interface Props {
  title: string;
  currentPath?: string;
}

const { title, currentPath = '' } = Astro.props;

const nav = [
  {
    group: 'Pradžia',
    items: [
      { label: 'Apžvalga', href: '/docs' },
      { label: 'Greita pradžia', href: '/docs/getting-started' },
    ],
  },
  {
    group: 'Kreditai ir planai',
    items: [
      { label: 'Kaip veikia kreditai', href: '/docs/credits' },
      { label: 'Planų palyginimas', href: '/pricing' },
    ],
  },
  {
    group: 'Analizė',
    items: [
      { label: 'Palaikomi formatai', href: '/docs/formats' },
      { label: 'ZIP archyvai', href: '/docs/zip' },
      { label: 'QA kokybės balas', href: '/docs/qa-score' },
    ],
  },
  {
    group: 'Eksportas ir integracija',
    items: [
      { label: 'PDF/DOCX eksportas', href: '/docs/export' },
      { label: 'API prieiga (Team+)', href: '/docs/api' },
    ],
  },
];
---
<Layout title={`${title} — foxDoc dokumentacija`}>
  <div style="background: #1a1512; min-height: 100vh;">
  <div style="max-width: 72rem; margin: 0 auto; padding: 2rem 1.5rem 4rem; display: flex; gap: 3rem; align-items: flex-start;">

    <!-- Sidebar -->
    <aside style="width: 220px; flex-shrink: 0; position: sticky; top: 5rem; display: none; background: #130f0c; border-radius: 0.75rem; padding: 1.25rem;"
           class="docs-sidebar">
      {nav.map(section => (
        <div style="margin-bottom: 1.75rem;">
          <p style="font-size: 0.7rem; font-family: 'JetBrains Mono', monospace; color: #ea580c; text-transform: uppercase; letter-spacing: 0.08em; margin: 0 0 0.5rem;">{section.group}</p>
          <ul style="list-style: none; padding: 0; margin: 0; display: flex; flex-direction: column; gap: 0.1rem;">
            {section.items.map(item => (
              <li>
                <a href={item.href}
                   style={`display: block; padding: 0.4rem 0.75rem; border-radius: 0.375rem; font-size: 0.875rem; text-decoration: none; transition: all 0.15s; ${item.href === currentPath ? 'background: rgba(245, 158, 11,0.1); color: #f59e0b;' : 'color: #b5a99f;'}`}
                   class="docs-link">
                  {item.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </aside>

    <!-- Main content -->
    <main style="flex: 1; min-width: 0; background: #1e1a16; border-radius: 0.75rem; padding: 2rem;" class="docs-content">
      <!-- Mobile nav toggle -->
      <details style="margin-bottom: 2rem; display: block;" class="docs-mobile-nav">
        <summary style="cursor: pointer; padding: 0.75rem 1rem; border-radius: 0.5rem; border: 1px solid rgba(168,162,158,0.15); background: #231c18; color: #b5a99f; font-size: 0.875rem; list-style: none; display: flex; align-items: center; justify-content: space-between;">
          <span>Dokumentacijos meniu</span>
          <span>▾</span>
        </summary>
        <div style="margin-top: 0.5rem; padding: 1rem; border-radius: 0.5rem; border: 1px solid rgba(168,162,158,0.15); background: #231c18;">
          {nav.map(section => (
            <div style="margin-bottom: 1rem;">
              <p style="font-size: 0.7rem; font-family: 'JetBrains Mono', monospace; color: #ea580c; text-transform: uppercase; letter-spacing: 0.08em; margin: 0 0 0.4rem;">{section.group}</p>
              {section.items.map(item => (
                <a href={item.href} style="display: block; padding: 0.35rem 0.5rem; font-size: 0.875rem; color: #b5a99f; text-decoration: none;">{item.label}</a>
              ))}
            </div>
          ))}
        </div>
      </details>

      <slot />
    </main>
  </div>
  </div>

  <style>
    @media (min-width: 768px) {
      .docs-sidebar { display: block !important; }
      .docs-mobile-nav { display: none !important; }
    }
    .docs-link:hover { color: #fdf9f7 !important; background: #2e2520 !important; }
    .docs-content h1 { font-family: 'Space Grotesk', sans-serif; font-weight: 700; font-size: clamp(1.75rem, 3vw, 2.5rem); color: #fdf9f7; margin: 0 0 1rem; }
    .docs-content h2 { font-family: 'Space Grotesk', sans-serif; font-weight: 600; font-size: 1.375rem; color: #fdf9f7; margin: 2.5rem 0 0.75rem; }
    .docs-content h3 { font-family: 'Space Grotesk', sans-serif; font-weight: 600; font-size: 1.1rem; color: #ede5df; margin: 1.5rem 0 0.5rem; }
    .docs-content p { color: #b5a99f; line-height: 1.8; margin: 0 0 1rem; }
    .docs-content ul, .docs-content ol { color: #b5a99f; padding-left: 1.5rem; margin: 0 0 1rem; }
    .docs-content li { line-height: 1.8; }
    .docs-content code { font-family: 'JetBrains Mono', monospace; font-size: 0.85em; background: rgba(168,162,158,0.10); padding: 0.15em 0.4em; border-radius: 0.25rem; color: #f59e0b; }
    .docs-content pre { background: #231c18; border: 1px solid rgba(168,162,158,0.15); border-radius: 0.75rem; padding: 1.25rem; overflow-x: auto; margin: 0 0 1.5rem; }
    .docs-content pre code { background: none; padding: 0; color: #ede5df; }
    .docs-content a { color: #f59e0b; }
    .docs-content a:hover { text-decoration: underline; }
    .docs-content table { width: 100%; border-collapse: collapse; margin: 0 0 1.5rem; font-size: 0.875rem; }
    .docs-content th { text-align: left; padding: 0.6rem 0.875rem; border-bottom: 1px solid rgba(168,162,158,0.22); color: #fdf9f7; font-weight: 600; }
    .docs-content td { padding: 0.6rem 0.875rem; border-bottom: 1px solid rgba(168,162,158,0.10); color: #b5a99f; }
    .docs-content .callout { padding: 1rem 1.25rem; border-radius: 0.75rem; border-left: 3px solid #f59e0b; background: rgba(245, 158, 11,0.06); margin: 0 0 1.5rem; }
    .docs-content .callout p { margin: 0; }
  </style>
</Layout>
