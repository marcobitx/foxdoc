---
// landing/src/pages/forum/nauja.astro
// New forum topic creation page
// SSR page — React island handles auth check and form submission
import Layout from '../../layouts/Layout.astro';
export const prerender = false;
---
<Layout title="Nauja tema — foxDoc forumas">

  <div style="background: #0d0a08; padding: 5rem 1.5rem 2.5rem;">
    <div style="max-width: 52rem; margin: 0 auto;">
      <a href="/forum" style="font-size: 0.8125rem; color: #7a6b61; text-decoration: none; display: inline-flex; align-items: center; gap: 0.375rem; margin-bottom: 1.25rem; font-family: 'JetBrains Mono', monospace;">
        ← Atgal į forumą
      </a>
      <h1 style="font-family: 'Space Grotesk', sans-serif; font-weight: 700; font-size: clamp(1.5rem, 3vw, 2rem); color: #fdf9f7; margin: 0;">
        Nauja tema
      </h1>
    </div>
  </div>

  <div style="background: #1a1512; padding: 2rem 1.5rem 5rem;">
    <div style="max-width: 52rem; margin: 0 auto;">
      <div id="new-post-root"></div>
    </div>
  </div>

  <script>
    import ForumNewPost from '../../components/forum/ForumNewPost';
    import { createElement } from 'react';
    import { createRoot } from 'react-dom/client';
    const root = document.getElementById('new-post-root');
    if (root) createRoot(root).render(createElement(ForumNewPost));
  </script>
</Layout>
