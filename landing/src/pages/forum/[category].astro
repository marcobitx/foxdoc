---
// landing/src/pages/forum/[category].astro
// Forum category page — static placeholder for each category
// Note: real posts require Convex integration (future task)
import Layout from '../../layouts/Layout.astro';

export function getStaticPaths() {
  return [
    { params: { category: 'bendri-klausimai' }, props: { title: 'Bendri klausimai' } },
    { params: { category: 'technine-pagalba' }, props: { title: 'Techninė pagalba' } },
    { params: { category: 'pirkimu-diskusijos' }, props: { title: 'Viešųjų pirkimų diskusijos' } },
    { params: { category: 'idejus-pasiulymai' }, props: { title: 'Idėjos ir pasiūlymai' } },
    { params: { category: 'sekmingos-analizės' }, props: { title: 'Sėkmingos analizės' } },
  ];
}

const { title } = Astro.props;
---
<Layout title={`${title} — foxDoc forumas`}>

  <div style="background: #0d0a08; padding: 5rem 1.5rem 3rem;">
    <div style="max-width: 56rem; margin: 0 auto;">
      <a href="/forum" style="font-size: 0.875rem; color: #b5a99f; text-decoration: none; display: inline-flex; align-items: center; gap: 0.4rem; margin-bottom: 1.5rem;">
        ← Atgal į forumą
      </a>
      <h1 style="font-family: 'Space Grotesk', sans-serif; font-weight: 700; font-size: clamp(1.75rem, 4vw, 2.5rem); color: #fdf9f7; margin: 0;">{title}</h1>
    </div>
  </div>

  <div style="background: #1e1a16; padding: 3rem 1.5rem 5rem;">
    <div style="max-width: 56rem; margin: 0 auto;">
      <div style="padding: 3rem; border-radius: 1rem; border: 1px solid rgba(168,162,158,0.15); background: #231c18; text-align: center;">
        <div style="width: 48px; height: 48px; border-radius: 10px; background: rgba(245,158,11,0.08); display: flex; align-items: center; justify-content: center; margin: 0 auto 1.25rem;">
          <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="#f59e0b" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="10"/><line x1="12" y1="8" x2="12" y2="12"/><line x1="12" y1="16" x2="12.01" y2="16"/>
          </svg>
        </div>
        <h2 style="font-family: 'Space Grotesk', sans-serif; font-weight: 600; font-size: 1.25rem; color: #fdf9f7; margin: 0 0 0.75rem;">
          Ši sekcija netrukus atidarys
        </h2>
        <p style="color: #b5a99f; margin: 0 0 1.5rem; max-width: 28rem; margin-left: auto; margin-right: auto;">
          Aktyviai kuriame forumo infrastruktūrą. Registruokitės — pranešime kai galėsite rašyti žinutes.
        </p>
        <a href="/auth?returnUrl=/forum"
           style="display: inline-flex; align-items: center; justify-content: center; padding: 0.5rem 1.25rem; border-radius: 0.5rem; background: #f59e0b; color: #1a1512; font-weight: 600; text-decoration: none; font-size: 0.875rem;">
          Registruotis nemokamai
        </a>
      </div>
    </div>
  </div>

</Layout>
