---
// landing/src/pages/auth.astro
// Login/signup page for foxdoc.io
// Authenticates users and redirects to app.foxdoc.io via relay code
// Related: AuthForm.tsx, LandingConvexProvider.tsx

import AuthForm from '../components/AuthForm';
import '../styles/global.css';
---
<!doctype html>
<html lang="lt">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Prisijunkite prie foxDoc" />
    <title>Prisijungti | foxDoc</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body style="background: #1a1512; color: #ede5df; margin: 0;">
    <div style="min-height: 100vh; display: flex; align-items: center; justify-content: center; padding: 1rem;">
      <div style="width: 100%; max-width: 28rem;">
        <div style="text-align: center; margin-bottom: 2rem;">
          <a href="/" style="display: inline-flex; align-items: center; gap: 0.5rem; margin-bottom: 1.5rem; text-decoration: none;">
            <img src="/favicon.svg" alt="foxDoc" width="32" height="32" />
            <span style="font-family: 'Space Grotesk', sans-serif; font-size: 1.25rem; font-weight: 700; color: white;">
              fox<span style="color: #f59e0b;">Doc</span>
            </span>
          </a>
          <h1 style="font-family: 'Space Grotesk', sans-serif; font-size: 1.5rem; font-weight: 700; color: white; margin: 0;">
            Sveiki sugrįžę
          </h1>
          <p style="color: #d6d3d1; margin-top: 0.5rem; font-size: 0.875rem;">
            Prisijunkite arba susikurkite paskyrą
          </p>
        </div>

        <div style="background: rgba(23,20,17,0.6); border: 1px solid rgba(168,162,158,0.12); border-radius: 1rem; padding: 1.5rem; backdrop-filter: blur(8px);">
          <AuthForm client:only="react" />
        </div>
      </div>
    </div>
  </body>
</html>
