---
// landing/src/pages/use-cases.astro
// Detailed use cases page — 3 audience segments with examples
// Related: Layout.astro, UseCases.astro (landing preview)
import Layout from '../layouts/Layout.astro';

const audiences = [
  {
    id: 'perkanciosios',
    svgKey: 'building',
    title: 'Perkančios organizacijos',
    subtitle: 'Savivaldybės, ministerijos, viešosios institucijos',
    description: 'Gaunate dešimtis pasiūlymų per mėnesį. Kiekvieno rankinė peržiūra užima valandas. foxDoc automatizuoja šį procesą.',
    scenarios: [
      { title: 'Pasiūlymų atitikties tikrinimas', desc: 'Įkelkite visus gautus pasiūlymus kaip ZIP — sistema kiekvieną išanalizuoja pagal techninius reikalavimus ir pateikia atitikties santrauką.' },
      { title: 'Techninių reikalavimų santrauka', desc: 'Norint greitai suvokti pirkimo sąlygų esmę prieš posėdį — 3 minutės, o ne 3 valandos.' },
      { title: 'Dokumentacijos auditas', desc: 'Prieš skelbiant pirkimą, patikrinkite ar visa reikiama informacija yra dokumentuose. QA balas parodo spragas.' },
    ],
    stat: '4–6 valandos → 3 minutės',
    statLabel: 'Vieno pirkimo paketo analizės laikas',
  },
  {
    id: 'tiekejai',
    svgKey: 'box',
    title: 'Tiekėjai ir rangovai',
    subtitle: 'Įmonės, teikiančios pasiūlymus viešiems pirkimams',
    description: 'Norint pateikti konkurencingą pasiūlymą, reikia tiksliai suprasti visas pirkimo sąlygas. foxDoc tai padaro akimirksniu.',
    scenarios: [
      { title: 'Pirkimo sąlygų analizė', desc: 'Prieš teikdami pasiūlymą sužinokite visus techninius reikalavimus, terminus, kvalifikacinius kriterijus ir rizikos faktorius.' },
      { title: 'CPV kodų ir vertės identifikavimas', desc: 'Greitai nustatykite ar pirkimas atitinka jūsų veiklos sritį pagal CPV kodus ir sutarties vertę.' },
      { title: 'Konkurentų pasiūlymų lyginimas', desc: 'Laimėję pirkimą ar baigus procedūrą — analizuokite konkurentų pasiūlymus ir mokykitės iš rezultatų.' },
    ],
    stat: '85%',
    statLabel: 'Tiekėjų, kurie praleidžia svarbius reikalavimus rankinės peržiūros metu',
  },
  {
    id: 'auditoriai',
    svgKey: 'search',
    title: 'Auditoriai ir konsultantai',
    subtitle: 'Viešųjų pirkimų audito ir konsultavimo įmonės',
    description: 'Dirbate su dešimtimis pirkimų per mėnesį. foxDoc leidžia sistemingai patikrinti kiekvieną paketą per minutę.',
    scenarios: [
      { title: 'Procedūrinių klaidų paieška', desc: 'Sistemingai analizuokite pirkimų dokumentų paketus dėl neatitikčių teisės aktų reikalavimams ir procedūrinių spragų.' },
      { title: 'Atitikties ataskaitos generavimas', desc: 'Eksportuokite struktūrizuotas ataskaitas PDF arba DOCX formatu — tinkamos audito išvadoms dokumentuoti.' },
      { title: 'Didelių pirkimų portfelių peržiūra', desc: 'Masinis įkėlimas (Team planas) leidžia per vieną sesiją išanalizuoti visą institucijos pirkimų archyvą.' },
    ],
    stat: '10x',
    statLabel: 'Daugiau pirkimų išanalizuojama per tą patį laiką',
  },
];
---
<Layout title="Naudojimo atvejai — foxDoc">

  <div style="background: #0d0a08; padding: 5rem 1.5rem 3rem;">
    <div style="max-width: 72rem; margin: 0 auto; text-align: center;">
      <p style="font-size: 0.75rem; font-family: 'JetBrains Mono', monospace; color: #f59e0b; text-transform: uppercase; letter-spacing: 0.05em; margin-bottom: 0.75rem;">// naudojimo atvejai</p>
      <h1 style="font-family: 'Space Grotesk', sans-serif; font-weight: 700; font-size: clamp(2rem, 5vw, 3.75rem); color: #fdf9f7; line-height: 1.15; margin: 0 0 1rem;">Kas naudoja foxDoc?</h1>
      <p style="color: #b5a99f; font-size: 1.125rem; max-width: 40rem; margin: 0 auto;">Trys pagrindinės tikslinės grupės, kurios kasdien sutaupo valandas naudodamos AI pirkimų analizei.</p>
    </div>
  </div>

  {audiences.map((a, i) => (
    <div id={a.id} style={`background: ${i % 2 === 0 ? '#1e1a16' : '#1a1512'}; padding: 4rem 1.5rem; ${i > 0 ? 'border-top: 1px solid rgba(168,162,158,0.08);' : ''}`}>
      <div style="max-width: 72rem; margin: 0 auto;">

        <div style="display: flex; align-items: flex-start; gap: 1.25rem; margin-bottom: 2rem;">
          <div style="width: 48px; height: 48px; border-radius: 10px; background: rgba(245,158,11,0.08); display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
            {a.svgKey === 'building' && <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="#f59e0b" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M3 21h18M5 21V7l7-4 7 4v14M9 21v-6h6v6"/></svg>}
            {a.svgKey === 'box'      && <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="#f59e0b" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/><polyline points="3.27 6.96 12 12.01 20.73 6.96"/><line x1="12" y1="22.08" x2="12" y2="12"/></svg>}
            {a.svgKey === 'search'   && <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="#f59e0b" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"/><line x1="21" y1="21" x2="16.65" y2="16.65"/></svg>}
          </div>
          <div>
            <p style="font-size: 0.75rem; font-family: 'JetBrains Mono', monospace; color: #ea580c; margin: 0 0 0.25rem;">{a.subtitle}</p>
            <h2 style="font-family: 'Space Grotesk', sans-serif; font-weight: 700; font-size: clamp(1.5rem, 3vw, 2rem); color: #fdf9f7; margin: 0 0 0.75rem;">{a.title}</h2>
            <p style="color: #b5a99f; max-width: 42rem; margin: 0;">{a.description}</p>
          </div>
        </div>

        <div style="display: inline-flex; align-items: center; gap: 1rem; padding: 1rem 1.5rem; border-radius: 0.75rem; background: rgba(245,158,11,0.06); border: 1px solid rgba(245,158,11,0.15); width: fit-content; margin-bottom: 2rem;">
          <span style="font-family: 'Space Grotesk', sans-serif; font-weight: 700; font-size: 1.75rem; color: #f59e0b;">{a.stat}</span>
          <span style="font-size: 0.875rem; color: #b5a99f; max-width: 16rem;">{a.statLabel}</span>
        </div>

        <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(260px, 1fr)); gap: 1rem;">
          {a.scenarios.map(sc => (
            <div style="padding: 1.25rem; border-radius: 0.875rem; border: 1px solid rgba(168,162,158,0.15); background: #231c18;">
              <h3 style="font-family: 'Space Grotesk', sans-serif; font-weight: 600; font-size: 1rem; color: #fdf9f7; margin: 0 0 0.5rem;">{sc.title}</h3>
              <p style="color: #b5a99f; font-size: 0.875rem; line-height: 1.6; margin: 0;">{sc.desc}</p>
            </div>
          ))}
        </div>

      </div>
    </div>
  ))}

  <div style="background: #0d0a08; padding: 4rem 1.5rem;">
    <div style="max-width: 72rem; margin: 0 auto; text-align: center; padding: 3rem 1.5rem; border-radius: 1rem; background: linear-gradient(135deg, rgba(234,88,12,0.12) 0%, rgba(245,158,11,0.06) 100%); border: 1px solid rgba(168,162,158,0.15);">
      <h2 style="font-family: 'Space Grotesk', sans-serif; font-weight: 700; font-size: 1.75rem; color: #fdf9f7; margin: 0 0 0.75rem;">Pradėkite nemokamai šiandien</h2>
      <p style="color: #b5a99f; margin: 0 0 1.5rem;">3 kreditai, jokios kortelės — įsitikinkite patys</p>
      <a href="https://app.foxdoc.io" style="display: inline-flex; align-items: center; justify-content: center; padding: 0.5rem 1.25rem; border-radius: 0.5rem; background: #f59e0b; color: #1a1512; font-weight: 600; text-decoration: none; font-size: 0.875rem;">Išbandyti nemokamai</a>
    </div>
  </div>

</Layout>
