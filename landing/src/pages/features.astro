---
// landing/src/pages/features.astro
// Features page — premium categorized layout: workflow showcase + quality grid + platform
// Related: Layout.astro, global.css

import Layout from '../layouts/Layout.astro';

const workflow = [
  {
    num: '01',
    svgKey: 'doc',
    title: 'Daugiaformatė analizė',
    desc: 'Įkelkite PDF, DOCX, XLSX failus arba ZIP archyvą su visu pirkimo paketu — be papildomų konvertavimų. Sistema automatiškai atpažįsta formatą ir parengia analizei.',
    tag: 'Dokumentai',
    metric: '50+',
    metricLabel: 'dokumentų',
    metricSub: 'vienu paketu',
  },
  {
    num: '02',
    svgKey: 'ai',
    title: 'LLM-powered duomenų ištraukimas',
    desc: 'Claude Sonnet 4 analizuoja kiekvieną dokumentą ir ištraukia CPV kodus, sutarties vertes, terminus, techninius reikalavimus, kvalifikacinius kriterijus ir daugiau.',
    tag: 'AI',
    metric: 'Claude',
    metricLabel: 'Sonnet 4',
    metricSub: 'LLM variklis',
  },
  {
    num: '03',
    svgKey: 'chart',
    title: 'Struktūrizuota ataskaita',
    desc: 'Visi surinkti duomenys pateikiami aiškioje struktūrizuotoje ataskaitoje su sekcijomis, lentelėmis ir QA kokybės balu — paruošta naudoti iš karto.',
    tag: 'Ataskaita',
    metric: '3',
    metricLabel: 'minutės',
    metricSub: 'nuo failo iki ataskaitos',
  },
];

const quality = [
  {
    svgKey: 'check',
    title: 'QA kokybės balas',
    desc: 'Automatinis ataskaitos išsamumo tikrinimas. Balas nuo 0–100 rodo, kiek pilnai ištraukta informacija — žemesnis balas signalizuoja neaiškią dokumentaciją.',
    tag: 'Kokybė',
    metric: '0–100',
  },
  {
    svgKey: 'chat',
    title: 'Pokalbių analizė (Chat)',
    desc: 'Po analizės galite užduoti papildomus klausimus apie dokumentus. AI atsako remdamasis išanalizuota medžiaga — be papildomo laiko.',
    tag: 'Chat',
    metric: 'Neribota',
  },
  {
    svgKey: 'export',
    title: 'PDF ir DOCX eksportas',
    desc: 'Ataskaitas eksportuokite į PDF (Pro+) arba DOCX formatą — tinkama struktūra kolegoms ir audito tikslams.',
    tag: 'Eksportas',
    metric: 'Pro+',
  },
  {
    svgKey: 'speed',
    title: 'Lygiagreti apdorojimas',
    desc: 'Iki 5 dokumentų analizuojami vienu metu. Didelius ZIP paketus apdorojame greitai — tipinė 50 dok. analizė trunka ~3 min.',
    tag: 'Greitis',
    metric: '5×',
  },
];

const platform = [
  { svgKey: 'zip',      title: 'ZIP archyvų palaikymas',  desc: 'Įkelkite visą pirkimo paketą kaip ZIP — automatiškai išpakuojama ir analizuojama.',         tag: 'ZIP',      pro: false },
  { svgKey: 'lock',     title: 'Saugumas ir GDPR',         desc: 'HTTPS šifravimas, failai trinami po analizės. Enterprise: GDPR DPA, VPC, audito žurnalai.', tag: 'Saugumas', pro: false },
  { svgKey: 'settings', title: 'Modelio pasirinkimas',     desc: 'Pro+ planuose galite rinktis LLM modelį — greičio, kainos ir tikslumo balansas.',            tag: 'Pro+',     pro: true  },
  { svgKey: 'api',      title: 'API prieiga',               desc: 'Integruokite foxDoc į savo sistemas per REST API. Automatizuokite pirkimų stebėseną.',        tag: 'Team+',    pro: true  },
  { svgKey: 'template', title: 'Pasirinktiniai promptai',   desc: 'Pritaikykite analizės šabloną — papildomi laukai ar specifinės sritys pagal poreikį.',       tag: 'Team+',    pro: true  },
];
---
<Layout title="Funkcijos — foxDoc">

  <!-- ── Dark header ── -->
  <div style="background: #0d0a08; padding: 5rem 1.5rem 3rem;">
    <div style="max-width: 72rem; margin: 0 auto; text-align: center;">
      <p style="font-size: 0.75rem; font-family: 'JetBrains Mono', monospace; color: #f59e0b; text-transform: uppercase; letter-spacing: 0.05em; margin-bottom: 0.75rem;">// funkcijos</p>
      <h1 style="font-family: 'Space Grotesk', sans-serif; font-weight: 700; font-size: clamp(2rem, 5vw, 3.75rem); color: #fdf9f7; line-height: 1.15; margin: 0 0 1rem;">Viskas, ko reikia pirkimų analizei</h1>
      <p style="color: #b5a99f; font-size: 1.125rem; max-width: 40rem; margin: 0 auto;">foxDoc automatizuoja rankinę dokumentų peržiūrą — nuo failo įkėlimo iki struktūrizuotos ataskaitos per 3 minutes.</p>
    </div>
  </div>

  <!-- ── Section 1: Core workflow (light cream) ── -->
  <div style="background: linear-gradient(to bottom, #0d0a08 0px, #fdf7f2 72px, #fdf7f2 calc(100% - 72px), #1e1a16 100%); padding: 3rem 1.5rem 4rem;">
    <div style="max-width: 72rem; margin: 0 auto;">
      <div style="margin-bottom: 2.5rem;">
        <p style="font-size: 0.7rem; font-family: 'JetBrains Mono', monospace; color: #d97706; text-transform: uppercase; letter-spacing: 0.08em; margin: 0 0 0.5rem;">// pagrindinis workflow</p>
        <h2 style="font-family: 'Space Grotesk', sans-serif; font-weight: 700; font-size: clamp(1.375rem, 3vw, 1.875rem); color: #1a1512; margin: 0;">Nuo failo iki ataskaitos — 3 žingsniai</h2>
      </div>

      <div style="display: flex; flex-direction: column; gap: 0;">
        {workflow.map((f, i) => (
          <div class="workflow-row" style={`display: flex; align-items: flex-start; gap: 1.5rem; padding: 1.75rem 0; ${i < workflow.length - 1 ? 'border-bottom: 1px solid rgba(0,0,0,0.08);' : ''}`}>
            <!-- Left: content -->
            <div style="display: flex; align-items: flex-start; gap: 1.25rem; flex: 1; min-width: 0;">
              <div style="flex-shrink: 0; display: flex; flex-direction: column; align-items: center; gap: 0.5rem; padding-top: 0.125rem;">
                <span style="font-family: 'JetBrains Mono', monospace; font-size: 0.7rem; font-weight: 600; color: rgba(234,88,12,0.4);">{f.num}</span>
                <div style={`width: 40px; height: 40px; border-radius: 10px; background: rgba(245,158,11,0.08); border: 1px solid rgba(245,158,11,0.15); display: flex; align-items: center; justify-content: center;`}>
                  {f.svgKey === 'doc'   && <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#d97706" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/><polyline points="14 2 14 8 20 8"/></svg>}
                  {f.svgKey === 'ai'    && <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#d97706" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="11" width="18" height="10" rx="2"/><circle cx="12" cy="5" r="2"/><path d="M12 7v4M8 15h.01M16 15h.01"/></svg>}
                  {f.svgKey === 'chart' && <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#d97706" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="20" x2="18" y2="10"/><line x1="12" y1="20" x2="12" y2="4"/><line x1="6" y1="20" x2="6" y2="14"/></svg>}
                </div>
              </div>
              <div style="flex: 1; min-width: 0;">
                <div style="display: flex; align-items: center; gap: 0.75rem; margin-bottom: 0.5rem; flex-wrap: wrap;">
                  <h3 style="font-family: 'Space Grotesk', sans-serif; font-weight: 600; font-size: 1.0625rem; color: #1a1512; margin: 0;">{f.title}</h3>
                  <span style="font-size: 0.65rem; font-family: 'JetBrains Mono', monospace; color: #ea580c; background: rgba(234,88,12,0.08); padding: 0.2rem 0.6rem; border-radius: 9999px;">{f.tag}</span>
                </div>
                <p style="color: #4a3f38; font-size: 0.9rem; line-height: 1.65; margin: 0;">{f.desc}</p>
              </div>
            </div>
            <!-- Right: metric badge -->
            <div class="metric-badge" style="flex-shrink: 0; padding: 1rem 1.25rem; border-radius: 0.75rem; background: rgba(245,158,11,0.07); border: 1px solid rgba(245,158,11,0.18); text-align: center; min-width: 7rem;">
              <p style="font-family: 'Space Grotesk', sans-serif; font-weight: 700; font-size: 1.5rem; color: #d97706; margin: 0; line-height: 1.1;">{f.metric}</p>
              <p style="font-family: 'JetBrains Mono', monospace; font-size: 0.7rem; color: #7a6b61; margin: 0.2rem 0 0; line-height: 1.3;">{f.metricLabel}</p>
              <p style="font-size: 0.65rem; color: rgba(122,107,97,0.7); margin: 0.1rem 0 0;">{f.metricSub}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- ── Section 2: Quality & communication (warm dark) ── -->
  <div style="background: #1e1a16; padding: 3rem 1.5rem 4rem;">
    <div style="max-width: 72rem; margin: 0 auto;">
      <div style="margin-bottom: 2.5rem;">
        <p style="font-size: 0.7rem; font-family: 'JetBrains Mono', monospace; color: #ea580c; text-transform: uppercase; letter-spacing: 0.08em; margin: 0 0 0.5rem;">// kokybė ir komunikacija</p>
        <h2 style="font-family: 'Space Grotesk', sans-serif; font-weight: 700; font-size: clamp(1.375rem, 3vw, 1.875rem); color: #fdf9f7; margin: 0;">Analizė, kuri dirba už jus</h2>
      </div>

      <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 1.25rem;" class="quality-grid">
        {quality.map(f => (
          <div class="quality-card" style="padding: 1.75rem; border-radius: 1rem; border: 1px solid rgba(168,162,158,0.15); background: #231c18; display: flex; flex-direction: column; gap: 1rem;">
            <div style="display: flex; align-items: center; justify-content: space-between; gap: 1rem;">
              <div style="display: flex; align-items: center; gap: 0.875rem;">
                <div style="width: 40px; height: 40px; border-radius: 10px; background: rgba(245,158,11,0.08); border: 1px solid rgba(245,158,11,0.12); display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                  {f.svgKey === 'check'  && <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#f59e0b" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>}
                  {f.svgKey === 'chat'   && <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#f59e0b" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/></svg>}
                  {f.svgKey === 'export' && <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#f59e0b" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="17 8 12 3 7 8"/><line x1="12" y1="3" x2="12" y2="15"/></svg>}
                  {f.svgKey === 'speed'  && <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="#f59e0b" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/></svg>}
                </div>
                <h3 style="font-family: 'Space Grotesk', sans-serif; font-weight: 600; font-size: 1rem; color: #fdf9f7; margin: 0;">{f.title}</h3>
              </div>
              <span style="font-size: 0.65rem; font-family: 'JetBrains Mono', monospace; color: #ea580c; background: rgba(234,88,12,0.1); padding: 0.2rem 0.6rem; border-radius: 9999px; white-space: nowrap; flex-shrink: 0;">{f.tag}</span>
            </div>
            <p style="color: #b5a99f; font-size: 0.875rem; line-height: 1.65; margin: 0; flex: 1;">{f.desc}</p>
            <div style="padding: 0.5rem 0.875rem; border-radius: 0.5rem; background: rgba(245,158,11,0.06); border: 1px solid rgba(245,158,11,0.12); align-self: flex-start;">
              <span style="font-family: 'JetBrains Mono', monospace; font-size: 0.75rem; color: #f59e0b; font-weight: 600;">{f.metric}</span>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- ── Section 3: Platform / enterprise (darkest) ── -->
  <div style="background: #0d0a08; padding: 3rem 1.5rem 5rem;">
    <div style="max-width: 72rem; margin: 0 auto;">
      <div style="margin-bottom: 2.5rem;">
        <p style="font-size: 0.7rem; font-family: 'JetBrains Mono', monospace; color: #f59e0b; text-transform: uppercase; letter-spacing: 0.08em; margin: 0 0 0.5rem;">// techninė platforma</p>
        <h2 style="font-family: 'Space Grotesk', sans-serif; font-weight: 700; font-size: clamp(1.375rem, 3vw, 1.875rem); color: #fdf9f7; margin: 0;">Saugumas, greitis ir integracija</h2>
      </div>

      <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(240px, 1fr)); gap: 1rem;">
        {platform.map(f => (
          <div class="platform-card" style={`padding: 1.25rem 1.5rem; border-radius: 0.875rem; border: 1px solid ${f.pro ? 'rgba(245,158,11,0.22)' : 'rgba(168,162,158,0.13)'}; background: ${f.pro ? 'rgba(245,158,11,0.04)' : '#1a1512'};`}>
            <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 0.875rem;">
              <div style="width: 36px; height: 36px; border-radius: 8px; background: rgba(245,158,11,0.08); display: flex; align-items: center; justify-content: center;">
                {f.svgKey === 'zip'      && <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#f59e0b" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/></svg>}
                {f.svgKey === 'lock'     && <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#f59e0b" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/></svg>}
                {f.svgKey === 'settings' && <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#f59e0b" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="3"/><path d="M19.07 4.93a10 10 0 0 0-14.14 0M4.93 19.07a10 10 0 0 0 14.14 0"/></svg>}
                {f.svgKey === 'api'      && <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#f59e0b" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/><path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/></svg>}
                {f.svgKey === 'template' && <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#f59e0b" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"/><rect x="8" y="2" width="8" height="4" rx="1" ry="1"/></svg>}
              </div>
              <span style={`font-size: 0.65rem; font-family: 'JetBrains Mono', monospace; ${f.pro ? 'color: #f59e0b; background: rgba(245,158,11,0.1);' : 'color: #ea580c; background: rgba(234,88,12,0.1);'} padding: 0.2rem 0.6rem; border-radius: 9999px;`}>{f.tag}</span>
            </div>
            <h3 style="font-family: 'Space Grotesk', sans-serif; font-weight: 600; font-size: 0.9375rem; color: #fdf9f7; margin: 0 0 0.4rem;">{f.title}</h3>
            <p style="color: #b5a99f; font-size: 0.8125rem; line-height: 1.6; margin: 0;">{f.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- ── CTA ── -->
  <div style="background: #0d0a08; padding: 0 1.5rem 5rem;">
    <div style="max-width: 72rem; margin: 0 auto; text-align: center; padding: 3rem 1.5rem; border-radius: 1rem; background: linear-gradient(135deg, rgba(234,88,12,0.12) 0%, rgba(245,158,11,0.06) 100%); border: 1px solid rgba(168,162,158,0.15);">
      <h2 style="font-family: 'Space Grotesk', sans-serif; font-weight: 700; font-size: 1.75rem; color: #fdf9f7; margin: 0 0 0.75rem;">Išbandykite nemokamai</h2>
      <p style="color: #b5a99f; margin: 0 0 1.5rem;">3 kreditai, nereikalinga kortelė — pradėkite dabar</p>
      <a href="https://app.foxdoc.io" style="display: inline-flex; align-items: center; justify-content: center; padding: 0.5rem 1.25rem; border-radius: 0.5rem; background: #f59e0b; color: #1a1512; font-weight: 600; text-decoration: none; font-size: 0.875rem;">Pradėti nemokamai</a>
    </div>
  </div>

  <style>
    .quality-card:hover { border-color: rgba(245,158,11,0.2) !important; }
    .platform-card:hover { border-color: rgba(245,158,11,0.25) !important; }
    @media (max-width: 640px) {
      .quality-grid { grid-template-columns: 1fr !important; }
      .metric-badge { display: none !important; }
    }
  </style>
</Layout>
